@model Project2.Models.DanhMuc

@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Thêm danh mục mới</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="TenDanhMuc" class="form-label">
                            <i class="fas fa-tag"></i> Tên danh mục <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TenDanhMuc" class="form-control" placeholder="Nhập tên danh mục..." />
                        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MoTaDanhMuc" class="form-label">
                            <i class="fas fa-align-left"></i> Mô tả danh mục
                        </label>
                        <textarea asp-for="MoTaDanhMuc" class="form-control" rows="4"
                                  placeholder="Nhập mô tả cho danh mục..."></textarea>
                        <span asp-validation-for="MoTaDanhMuc" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Lưu ý:</strong> Ngày tạo sẽ được tự động ghi nhận khi tạo danh mục.
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Lưu danh mục
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}