@model List<SanPham>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<style>
    /* Toàn bộ background ấm áp */
    body {
        background: linear-gradient(135deg, #fff4e6, #ffe8d6);
        font-family: "Segoe UI", sans-serif;
    }

    /* Card sản phẩm */
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        background: #fffaf5;
    }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    /* Header danh mục */
    .card-header {
        background: linear-gradient(90deg, #ff7b54, #ffb26b);
        color: white;
        font-weight: bold;
        border-radius: 15px 15px 0 0 !important;
    }

    /* Link danh mục */
    .list-unstyled li a {
        text-decoration: none;
        color: #444;
        transition: color 0.2s ease;
    }

        .list-unstyled li a:hover {
            color: #ff5722;
        }

    .fw-bold {
        color: #ff5722 !important;
    }

    /* Tiêu đề sản phẩm */
    .card-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
    }

    /* Giá sản phẩm */
    .text-danger {
        color: #e63946 !important;
        font-weight: bold;
        white-space: nowrap;
    }

    /* Nút */
    .btn-primary {
        background: linear-gradient(90deg, #ff7b54, #ffb26b);
        border: none;
        transition: background 0.3s ease, transform 0.2s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #ff5722, #ff9a76);
            transform: scale(1.05);
        }

    .btn-outline-primary {
        border-color: #ff7b54;
        color: #ff7b54;
    }

        .btn-outline-primary:hover {
            background: #ff7b54;
            color: white;
        }

    /* Các nút action sản phẩm */
    .product-actions {
        display: flex;
        gap: 8px;
    }

        .product-actions .btn {
            border-radius: 8px !important;
        }

        .product-actions form {
            margin: 0;
        }

    /* Pagination */
    .pagination .page-link {
        color: #ff7b54;
        border-radius: 8px;
        margin: 0 3px;
        transition: all 0.2s;
    }

    .pagination .page-item.active .page-link {
        background: #ff7b54;
        border-color: #ff7b54;
        color: white;
    }

    .pagination .page-link:hover {
        background: #ffe0cc;
        color: #d35400;
    }
</style>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Danh mục sản phẩm</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><a href="@Url.Action("Index")" class="@(ViewBag.DanhMucId == null ? "fw-bold" : "")">Tất cả</a></li>
                    @foreach (var dm in ViewBag.DanhMucs as List<DanhMuc>)
                    {
                        <li class="mt-2">
                            <a href="@Url.Action("Index", new { danhMucId = dm.IddanhMuc })"
                               class="@(ViewBag.DanhMucId == dm.IddanhMuc ? "fw-bold" : "")">
                                @dm.TenDanhMuc
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="~/images/@item.AnhSanPham" class="card-img-top" alt="@item.TenSanPham"
                             style="height: 200px; object-fit: cover;"
                             onerror="this.src='~/images/default-food.jpg'">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.TenSanPham</h5>
                            <p class="card-text">@item.MoTaSanPham</p>
                            
                            <div class="mt-auto">
                                <p class="card-text"><small class="text-muted">@item.IddanhMucNavigation?.TenDanhMuc</small></p>
                                @if (ViewBag.DaBanDict.ContainsKey(item.IdsanPham))
                                {
                                    <p class="text-success mb-2">
                                        Đã bán: @ViewBag.DaBanDict[item.IdsanPham] sản phẩm
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted mb-2">Đã bán: 0 sản phẩm</p>
                                }
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h6 text-danger mb-0">@item.GiaSanPham.ToString("N0") VNĐ</span>
                                    <div class="product-actions">
                                        <a href="@Url.Action("Details", new { id = item.IdsanPham })"
                                           class="btn btn-outline-primary btn-sm">Chi tiết</a>

                                        <form asp-controller="SanPham" asp-action="ThemGioHang" method="post">
                                            <input type="hidden" name="sanPhamId" value="@item.IdsanPham" />
                                            <input type="hidden" name="soLuong" value="1" />
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fas fa-cart-plus"></i> Thêm giỏ
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Phân trang -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Product pagination">
                <ul class="pagination justify-content-center">
                    <!-- Previous -->
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, danhMucId = ViewBag.DanhMucId })">
                                &laquo; Trước
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">&laquo; Trước</span>
                        </li>
                    }

                    <!-- Page numbers -->
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { page = i, danhMucId = ViewBag.DanhMucId })">
                                @i
                            </a>
                        </li>
                    }

                    <!-- Next -->
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, danhMucId = ViewBag.DanhMucId })">
                                Sau &raquo;
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled">
                            <span class="page-link">Sau &raquo;</span>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>