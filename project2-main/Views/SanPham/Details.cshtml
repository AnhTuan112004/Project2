@model SanPham
@{
    ViewData["Title"] = Model.TenSanPham;
}
<style>
    /* ----- Tổng thể ----- */
body {
    font-family: "Segoe UI", Arial, sans-serif;
}

h2, h4 {
    font-weight: 600;
    color: #222;
}

/* ----- Ảnh sản phẩm ----- */
.img-fluid {
    border-radius: 16px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s;
}

.img-fluid:hover {
    transform: scale(1.03);
}

/* ----- Thông tin sản phẩm ----- */
    .col-md-6 img.img-fluid {
        width: 100%;
        max-width: 500px; 
        height: 400px;
        display: block;
        margin: 0 auto;
    }

.price {
    font-size: 1.8rem;
    font-weight: 700;
    color: #dc3545;
}

.badge.bg-success {
    font-size: 0.9rem;
    padding: 6px 12px;
    border-radius: 10px;
}

label {
    font-weight: 500;
}

/* ----- Nút thao tác ----- */
.btn {
    border-radius: 10px;
    font-weight: 500;
    padding: 10px 18px;
    transition: all 0.2s ease-in-out;
}

.btn-primary {
    background: linear-gradient(to right, #007bff, #0d6efd);
    border: none;
}

.btn-primary:hover {
    transform: scale(1.05);
    background: linear-gradient(to right, #0069d9, #0b5ed7);
}

.btn-outline-secondary:hover {
    background-color: #e9ecef;
}

/* ----- Đánh giá khách hàng ----- */
.card {
    border-radius: 14px;
    border: 1px solid #e0e0e0;
    box-shadow: 0 3px 6px rgba(0,0,0,0.05);
}

.card-body {
    padding: 16px 20px;
}

/* ----- Form đánh giá ----- */
#danhGiaForm textarea {
    resize: none;
    border-radius: 10px;
    border: 1px solid #ced4da;
    transition: border-color 0.2s;
}

#danhGiaForm textarea:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 4px rgba(13,110,253,0.25);
}

/* ----- Ngôi sao đánh giá ----- */
.star-rating {
    direction: rtl;
    display: inline-flex;
    gap: 4px;
}

.star-rating input {
    display: none;
}

.star-rating label {
    color: #ccc;
    font-size: 28px;
    cursor: pointer;
    transition: color 0.2s;
}

.star-rating input:checked ~ label,
.star-rating label:hover,
.star-rating label:hover ~ label {
    color: #ffc107;
}

/* ----- Phần hiển thị đánh giá ----- */
.card h6 {
    font-weight: 600;
}

.text-warning {
    color: #ffc107 !important;
}

.text-muted {
    color: #6c757d !important;
}



</style>
<div class="row">
    <div class="col-md-6">
        <img src="~/images/@Model.AnhSanPham" class="img-fluid rounded" alt="@Model.TenSanPham"
             onerror="this.src='~/images/default-food.jpg'" />
    </div>

    <div class="col-md-6">
        <h2>@Model.TenSanPham</h2>
        <p class="text-muted">@Model.IddanhMucNavigation?.TenDanhMuc</p>
        <p>@Model.MoTaSanPham</p>

        <div class="price mb-3">
            <span class="h3 text-danger">@Model.GiaSanPham.ToString("N0") VNĐ</span>
        </div>

        <div class="mb-3">
            <span class="badge bg-success">@Model.Status</span>
        </div>

        <!-- Form thêm giỏ hàng -->
        <form asp-controller="SanPham" asp-action="ThemGioHang" method="post">
            <input type="hidden" name="sanPhamId" value="@Model.IdsanPham" />
            <div class="row mb-3">
                <div class="col-4">
                    <label>Số lượng:</label>
                    <input type="number" name="soLuong" value="1" min="1" max="10" class="form-control" />
                </div>
            </div>
            <div class="d-grid gap-2 d-md-flex">
                <button type="submit" class="btn btn-primary me-md-2">
                    <i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng
                </button>
                <a href="@Url.Action("Index", "GioHang")" class="btn btn-outline-secondary">
                    <i class="fas fa-shopping-cart"></i> Xem giỏ hàng
                </a>

                
                <button type="button" class="btn btn-danger me-md-2" id="btnMuaNgay">
                    <i class="fas fa-bolt"></i> Mua ngay
                </button>

            </div>
        </form>

        <hr class="mt-4">
        <a href="@Url.Action("Index")" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>

<!-- Đánh giá sản phẩm -->
<div class="row mt-5">
    <div class="col-12">
        <h4>Đánh giá từ khách hàng</h4>

        @if (ViewBag.DaMuaSanPham == true)
        {
            <!-- Form đánh giá (chỉ hiện nếu đã mua) -->
            <div class="card mb-4">
                <div class="card-body">
                    <h6>Để lại đánh giá của bạn:</h6>
                    <form id="danhGiaForm">
                        <input type="hidden" id="sanPhamId" value="@Model.IdsanPham" />

                        <div class="mb-3">
                            <label>Đánh giá:</label>
                            <div class="star-rating">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    <input type="radio" id="star@(i)" name="rating" value="@i" />
                                    <label for="star@(i)" title="@i sao">★</label>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Nhận xét:</label>
                            <textarea id="noiDung" class="form-control" rows="3" placeholder="Chia sẻ trải nghiệm của bạn..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-success">Gửi đánh giá</button>
                    </form>
                </div>
            </div>
        }

        <!-- Hiển thị đánh giá -->
        @foreach (var danhGia in Model.DanhGia.OrderByDescending(d => d.NgayDanhGia))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h6>@danhGia.IdtaiKhoanNavigation?.FullName</h6>
                        <small class="text-muted">@danhGia.NgayDanhGia?.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>

                    <div class="mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            @if (i <= danhGia.Rating)
                            {
                                <span class="text-warning">★</span>
                            }
                            else
                            {
                                <span class="text-muted">☆</span>
                            }
                        }
                        <span class="ms-2">(@danhGia.Rating/5)</span>
                    </div>

                    <p>@danhGia.NoiDungDanhGia</p>
                </div>
            </div>
        }

        @if (!Model.DanhGia.Any())
        {
            <p class="text-muted">Chưa có đánh giá nào cho sản phẩm này.</p>
        }
    </div>
</div>

@section Scripts {
    <style>
        .star-rating {
            direction: rtl;
            display: inline-block;
        }
        .star-rating input {
            display: none;
        }
        .star-rating label {
            color: #ddd;
            font-size: 25px;
            cursor: pointer;
            transition: color 0.2s;
        }
        .star-rating input:checked ~ label,
        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: #ffc107;
        }
    </style>

    <script>
        document.getElementById('danhGiaForm')?.addEventListener('submit', function(e) {
            e.preventDefault();

            const sanPhamId = document.getElementById('sanPhamId').value;
            const rating = document.querySelector('input[name="rating"]:checked')?.value;
            const noiDung = document.getElementById('noiDung').value;

            if (!rating) {
                alert('Vui lòng chọn số sao đánh giá!');
                return;
            }

            fetch('@Url.Action("ThemDanhGia", "DanhGia")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: `sanPhamId=${sanPhamId}&rating=${rating}&noiDung=${encodeURIComponent(noiDung)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Đánh giá thành công!');
                    location.reload();
                } else {
                    alert(data.message || 'Có lỗi xảy ra!');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra!');
            });
        });
    </script>

    <script>
        document.getElementById("btnMuaNgay")?.addEventListener("click", function () {
            const sanPhamId = document.querySelector("input[name='sanPhamId']").value;
            const soLuong = document.querySelector("input[name='soLuong']").value;

            // ✅ Chuyển trực tiếp đến trang ThanhToan và truyền id + số lượng
            window.location.href = '@Url.Action("ThanhToan", "GioHang")' + `?sanPhamId=${sanPhamId}&soLuong=${soLuong}`;
        });
    </script>
}