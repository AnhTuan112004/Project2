@{
    ViewData["Title"] = "Thanh toán";
}

<h2>Thanh toán đơn hàng</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin giao hàng</h5>
            </div>
            <div class="card-body">
                <form asp-action="XacNhanDatHang" method="post">
                    @if (ViewBag.MuaNgay == true)
                    {
                        <input type="hidden" name="sanPhamId" value="@ViewBag.SanPham.IdsanPham" />
                        <input type="hidden" name="soLuong" value="@ViewBag.SoLuong" />
                    }

                    <div class="mb-3">
                        <label class="form-label">Họ tên người nhận:</label>
                        <input type="text" class="form-control" value="@Context.Session.GetString("UserName")" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email:</label>
                        <input type="email" class="form-control" value="@Context.Session.GetString("UserEmail")" readonly>
                    </div>

                    <div class="mb-3">
                        <label for="diaChiGiaoHang" class="form-label">Địa chỉ giao hàng:</label>
                        <textarea name="diaChiGiaoHang" class="form-control" rows="3" required
                                  placeholder="Nhập địa chỉ nhận hàng chi tiết..."></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Phương thức thanh toán:</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="payment" id="cod" checked>
                            <label class="form-check-label" for="cod">
                                Thanh toán khi nhận hàng (COD)
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-check"></i> Xác nhận đặt hàng
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Chi tiết đơn hàng</h5>
            </div>
            <div class="card-body">
                @if (ViewBag.MuaNgay == true)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <div>
                            <small>@ViewBag.SanPham.TenSanPham</small><br>
                            <small class="text-muted">@ViewBag.SoLuong x @ViewBag.SanPham.GiaSanPham.ToString("N0")đ</small>
                        </div>
                        <span>@((ViewBag.SanPham.GiaSanPham * ViewBag.SoLuong).ToString("N0"))đ</span>
                    </div>

                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Phí giao hàng:</span>
                        <span>Miễn phí</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Tổng cộng:</span>
                        <span class="text-danger">@ViewBag.TongTien.ToString("N0") VNĐ</span>
                    </div>
                }
                else
                {
                    @foreach (var item in ViewBag.GioHangs as List<GioHang>)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <div>
                                <small>@item.IdsanPhamNavigation.TenSanPham</small><br>
                                <small class="text-muted">@item.SoLuongTrongGio x @item.IdsanPhamNavigation.GiaSanPham.ToString("N0")đ</small>
                            </div>
                            <span>@((item.IdsanPhamNavigation.GiaSanPham * item.SoLuongTrongGio).ToString("N0"))đ</span>
                        </div>
                    }

                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Phí giao hàng:</span>
                        <span>Miễn phí</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Tổng cộng:</span>
                        <span class="text-danger">@ViewBag.TongTien.ToString("N0") VNĐ</span>
                    </div>
                }


                <hr>
                <div class="d-flex justify-content-between">
                    <span>Phí giao hàng:</span>
                    <span>Miễn phí</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between fw-bold">
                    <span>Tổng cộng:</span>
                    <span class="text-danger">@ViewBag.TongTien.ToString("N0") VNĐ</span>
                </div>
            </div>
        </div>
    </div>
</div>