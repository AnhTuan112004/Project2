@model SanPham
@{
    ViewData["Title"] = $"Chi tiết: {Model.TenSanPham}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Chi tiết sản phẩm</h2>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.IdsanPham })" class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Chỉnh sửa
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Thông tin sản phẩm</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <img src="~/images/@Model.AnhSanPham" alt="@Model.TenSanPham"
                             class="img-fluid rounded shadow"
                             onerror="this.src='~/images/default-food.jpg'" />
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">ID sản phẩm:</dt>
                            <dd class="col-sm-8">#@Model.IdsanPham</dd>

                            <dt class="col-sm-4">Tên sản phẩm:</dt>
                            <dd class="col-sm-8">
                                <h5 class="text-primary">@Model.TenSanPham</h5>
                            </dd>

                            <dt class="col-sm-4">Danh mục:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.IddanhMucNavigation?.TenDanhMuc</span>
                            </dd>

                            <dt class="col-sm-4">Giá bán:</dt>
                            <dd class="col-sm-8">
                                <h4 class="text-danger">@Model.GiaSanPham.ToString("N0") VNĐ</h4>
                            </dd>

                            <dt class="col-sm-4">Trạng thái:</dt>
                            <dd class="col-sm-8">
                                <span class="badge @(Model.Status == "Còn hàng" ? "bg-success" : "bg-danger") fs-6">
                                    @Model.Status
                                </span>
                            </dd>

                            <dt class="col-sm-4">Ngày tạo:</dt>
                            <dd class="col-sm-8">@Model.NgayTaoSanPham?.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-4">File ảnh:</dt>
                            <dd class="col-sm-8"><code>@Model.AnhSanPham</code></dd>
                        </dl>
                    </div>
                </div>

                <hr>

                <div class="row">
                    <div class="col-12">
                        <h6><i class="fas fa-align-left"></i> Mô tả sản phẩm:</h6>
                        <div class="border rounded p-3 bg-light">
                            @if (string.IsNullOrEmpty(Model.MoTaSanPham))
                            {
                                <em class="text-muted">Chưa có mô tả cho sản phẩm này.</em>
                            }
                            else
                            {
                                <p class="mb-0">@Model.MoTaSanPham</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-cog"></i> Thao tác</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Edit", new { id = Model.IdsanPham })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Chỉnh sửa sản phẩm
                    </a>

                    <a href="@Url.Action("Delete", new { id = Model.IdsanPham })" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa sản phẩm
                    </a>

                    <hr>

                    <a href="@Url.Action("Details", "SanPham", new { id = Model.IdsanPham })"
                       class="btn btn-info" target="_blank">
                        <i class="fas fa-external-link-alt"></i> Xem trên website
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6><i class="fas fa-chart-bar"></i> Thống kê</h6>
            </div>
            <div class="card-body text-center">
                <h4 class="text-success mb-1">@ViewBag.SoLuongDaBan</h4>
                <small class="text-muted">Đã bán</small>

                <hr>

                <div class="text-center">
                    <small class="text-muted">
                        <i class="fas fa-clock"></i>
                        Cập nhật cuối: @DateTime.Now.ToString("dd/MM/yyyy")
                    </small>
                </div>
            </div>
        </div>

    </div>
</div>