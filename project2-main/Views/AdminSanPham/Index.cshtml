@model List<SanPham>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-utensils"></i> Quản lý sản phẩm</h2>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div>
        <span class="badge bg-primary">Tổng: @Model.Count sản phẩm</span>
    </div>
</div>

<!-- Form tìm kiếm + lọc -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2 align-items-stretch">
        <!-- Ô tìm kiếm -->
        <div class="col-md-4">
            <input type="text" name="searchString" class="form-control"
                   placeholder="Tìm kiếm theo tên, mô tả..."
                   value="@ViewData["CurrentFilter"]" />
        </div>

        <!-- Dropdown lọc theo danh mục -->
        <div class="col-md-3">
            <select name="categoryId" class="form-select" onchange="this.form.submit()">
                <option value="">-- Tất cả danh mục --</option>
                @foreach (var dm in ViewBag.DanhMucs)
                {
                    <option value="@dm.IddanhMuc"
                            selected="@(ViewData["CurrentCategory"] != null && (int)ViewData["CurrentCategory"] == dm.IddanhMuc ? "selected" : null)">
                        @dm.TenDanhMuc
                    </option>
                }
            </select>
        </div>

        <!-- Nút tìm kiếm -->
        <div class="col-md-2">
            <button class="btn btn-primary w-100 h-100" type="submit">
                <i class="fas fa-search"></i> Tìm kiếm
            </button>
        </div>

        <!-- Nút xóa tìm -->
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-danger w-100 h-100">
                <i class="fas fa-times"></i> Xóa tìm
            </a>
        </div>

        <!-- Nút thêm sản phẩm -->
        <div class="col-md-2">
            <a href="@Url.Action("Create")" class="btn btn-success w-100 h-100">
                <i class="fas fa-plus"></i> Thêm sản phẩm
            </a>
        </div>
    </div>
</form>


<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@item.AnhSanPham" alt="@item.TenSanPham"
                             style="width: 60px; height: 60px; object-fit: cover;"
                             class="rounded"
                             onerror="this.src='~/images/default-food.jpg'">
                    </td>
                    <td>
                        <strong>@item.TenSanPham</strong><br>
                        <small class="text-muted">@Html.Raw(item.MoTaSanPham?.Length > 50 ? item.MoTaSanPham.Substring(0, 50) + "..." : item.MoTaSanPham)</small>
                    </td>
                    <td>@item.IddanhMucNavigation?.TenDanhMuc</td>
                    <td><span class="text-danger fw-bold">@item.GiaSanPham.ToString("N0") VNĐ</span></td>
                    <td>
                        <span class="badge @(item.Status == "Còn hàng" ? "bg-success" : "bg-danger")">
                            @item.Status
                        </span>
                    </td>
                    <td>@item.NgayTaoSanPham?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.IdsanPham })"
                           class="btn btn-info btn-sm">Chi tiết</a>
                        <a href="@Url.Action("Edit", new { id = item.IdsanPham })"
                           class="btn btn-warning btn-sm">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = item.IdsanPham })"
                           class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
        <h4>Chưa có sản phẩm nào</h4>
        <p class="text-muted">Hãy thêm sản phẩm đầu tiên!</p>
        <a href="@Url.Action("Create")" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm sản phẩm
        </a>
    </div>
}
