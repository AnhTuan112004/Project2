@model DonHang
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.IddonHang}";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Chi tiết đơn hàng #@Model.IddonHang</h2>
            <span class="badge @(GetStatusClass(Model.Status)) fs-6">@Model.Status</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Sản phẩm đã đặt</h5>
            </div>
            <div class="card-body">
                @foreach (var item in Model.ChiTietDonHangs)
                {
                    <div class="row mb-3 pb-3 border-bottom">
                        <div class="col-md-3">
                            <img src="~/images/@item.IdsanPhamNavigation?.AnhSanPham"
                                 class="img-fluid rounded"
                                 alt="@item.IdsanPhamNavigation?.TenSanPham"
                                 style="height: 80px; object-fit: cover;"
                                 onerror="this.src='~/images/default-food.jpg'">
                        </div>
                        <div class="col-md-6">
                            <h6>@item.IdsanPhamNavigation?.TenSanPham</h6>
                            <p class="text-muted mb-1">@item.Gia.ToString("N0") VNĐ x @item.SoLuong</p>
                        </div>
                        <div class="col-md-3 text-end">
                            <span class="fw-bold">@((item.Gia * item.SoLuong).ToString("N0")) VNĐ</span>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-9 text-end">
                        <strong>Tổng cộng:</strong>
                    </div>
                    <div class="col-md-3 text-end">
                        <span class="h5 text-danger">@Model.TongTien?.ToString("N0") VNĐ</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Thông tin đơn hàng</h5>
            </div>
            <div class="card-body">
                <p><strong>Ngày đặt:</strong><br>@Model.NgayTaoDonHang?.ToString("dd/MM/yyyy HH:mm")</p>
                <p>
                    <strong>Trạng thái:</strong><br>
                    <span class="badge @(GetStatusClass(Model.Status))">@Model.Status</span>
                </p>
                <p><strong>Địa chỉ giao hàng:</strong><br>@Model.DiaChiGiaoHang</p>

                @if (Model.Status == "Hoàn thành")
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i> Đơn hàng đã được giao thành công!
                    </div>
                }
                else if (Model.Status == "Chờ xác nhận")
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-clock"></i> Đơn hàng đang chờ xác nhận từ cửa hàng.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a href="@Url.Action("Index")" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left"></i> Quay lại danh sách đơn hàng
    </a>
</div>

@functions {
    public string GetStatusClass(string status)
    {
        return status switch
        {
            "Chờ xác nhận" => "bg-warning",
            "Hoàn thành" => "bg-success",
            "Đã hủy" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}