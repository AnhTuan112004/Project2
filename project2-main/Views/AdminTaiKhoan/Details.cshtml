@model TaiKhoan
@{
    ViewData["Title"] = $"Chi tiết tài khoản: {Model.FullName}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Chi tiết tài khoản</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-user"></i> Thông tin cá nhân</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <div class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto"
                             style="width: 100px; height: 100px; border-radius: 50%; font-size: 2rem;">
                            @Model.FullName?.Substring(0, 1).ToUpper()
                        </div>
                        <h5 class="mt-3">@Model.FullName</h5>
                        <span class="badge @(Model.Role?.ToLower() == "admin" ? "bg-danger" : "bg-primary") fs-6">
                            @Model.Role
                        </span>
                    </div>
                    <div class="col-md-9">
                        <dl class="row">
                            <dt class="col-sm-4">ID tài khoản:</dt>
                            <dd class="col-sm-8">#@Model.IDTaiKhoan</dd>

                            <dt class="col-sm-4">Họ và tên:</dt>
                            <dd class="col-sm-8">@Model.FullName</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </dd>

                            <dt class="col-sm-4">Số điện thoại:</dt>
                            <dd class="col-sm-8">
                                @if (string.IsNullOrEmpty(Model.Phone))
                                {
                                    <em class="text-muted">Chưa cập nhật</em>
                                }
                                else
                                {
                                    <a href="tel:@Model.Phone">@Model.Phone</a>
                                }
                            </dd>

                            <dt class="col-sm-4">Địa chỉ:</dt>
                            <dd class="col-sm-8">
                                @if (string.IsNullOrEmpty(Model.Address))
                                {
                                    <em class="text-muted">Chưa cập nhật</em>
                                }
                                else
                                {
                                    @Model.Address
                                }
                            </dd>

                            <dt class="col-sm-4">Ngày đăng ký:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-calendar"></i> @Model.NgayDangKi?.ToString("dd/MM/yyyy HH:mm")
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lịch sử đơn hàng -->
        <div class="card mt-4">
            <div class="card-header">
                <h5><i class="fas fa-receipt"></i> Lịch sử đơn hàng (@Model.DonHangs?.Count() đơn)</h5>
            </div>
            <div class="card-body">
                @if (Model.DonHangs?.Any() == true)
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var donHang in Model.DonHangs.OrderByDescending(d => d.NgayTaoDonHang).Take(10))
                                {
                                    <tr>
                                        <td><strong>#@donHang.IddonHang</strong></td>
                                        <td>@donHang.NgayTaoDonHang?.ToString("dd/MM/yyyy")</td>
                                        <td class="text-danger">@donHang.TongTien?.ToString("N0") VNĐ</td>
                                        <td>
                                            <span class="badge @(GetStatusClass(donHang.Status)) badge-sm">
                                                @donHang.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "AdminDonHang", new { id = donHang.IddonHang })"
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (Model.DonHangs.Count() > 10)
                    {
                        <div class="text-center">
                            <small class="text-muted">Hiển thị 10 đơn hàng gần nhất</small>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-receipt fa-2x text-muted mb-2"></i>
                        <p class="text-muted">Khách hàng chưa có đơn hàng nào</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-chart-bar"></i> Thống kê</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 mb-3">
                        <div class="border-bottom pb-2">
                            <h4 class="text-primary mb-1">@(Model.DonHangs?.Count() ?? 0)</h4>
                            <small class="text-muted">Tổng đơn hàng</small>
                        </div>
                    </div>
                    <div class="col-6 mb-3">
                        <div class="border-bottom pb-2">
                            <h4 class="text-success mb-1">@(Model.DonHangs?.Where(d => d.Status == "Hoàn thành").Count() ?? 0)</h4>
                            <small class="text-muted">Đã hoàn thành</small>
                        </div>
                    </div>

                    <div class="col-6">
                        <h5 class="text-warning mb-1">@(Model.DonHangs?.Where(d => d.Status == "Chờ xác nhận").Count() ?? 0)</h5>
                        <small class="text-muted">Chờ xác nhận</small>
                    </div>
                    <div class="col-6">
                        <h5 class="text-danger mb-1">@(Model.DonHangs?.Where(d => d.Status == "Đã hủy").Count() ?? 0)</h5>
                        <small class="text-muted">Đã hủy</small>
                    </div>
                </div>

                <hr>

                <div class="text-center">
                    <h5 class="text-info">@(Model.DonHangs?.Where(d => d.Status == "Hoàn thành").Sum(d => d.TongTien)?.ToString("N0") ?? "0") VNĐ</h5>
                    <small class="text-muted">Tổng giá trị đơn hàng</small>
                </div>
            </div>
        </div>

        @if (Model.Role?.ToLower() != "admin")
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-cog"></i> Thao tác</h6>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateRole" method="post" class="mb-3">
                        <input type="hidden" name="id" value="@Model.IDTaiKhoan" />
                        <label class="form-label">Thay đổi quyền:</label>
                        <div class="input-group">
                            <select name="role" class="form-select">
                                <option value="customer" selected="@(Model.Role?.ToLower() == "customer")">Customer</option>
                                <option value="admin" selected="@(Model.Role?.ToLower() == "admin")">Admin</option>
                            </select>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-sync"></i>
                            </button>
                        </div>
                    </form>

                    <div class="d-grid">
                        <button type="button" class="btn btn-danger"
                                onclick="confirmDelete(@Model.IDTaiKhoan, '@Model.FullName')">
                            <i class="fas fa-trash"></i> Xóa tài khoản
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-3">
                <i class="fas fa-shield-alt"></i>
                <small>Đây là tài khoản quản trị viên</small>
            </div>
        }
    </div>
</div>

<!-- Form xóa ẩn -->
<form id="deleteForm" asp-action="Delete" method="post" style="display: none;">
    <input type="hidden" id="deleteId" name="id" />
</form>

@functions {
    public string GetStatusClass(string status)
    {
        return status switch
        {
            "Chờ xác nhận" => "bg-warning text-dark",
            "Hoàn thành" => "bg-success",
            "Đã hủy" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm(`Bạn có chắc muốn xóa tài khoản "${name}"?`)) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}