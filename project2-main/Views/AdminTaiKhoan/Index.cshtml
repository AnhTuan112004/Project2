@model List<TaiKhoan>
@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Quản lý tài khoản</h2>
    <div>
        <span class="badge bg-primary">Tổng: @Model.Count tài khoản</span>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Quyền</th>
                <th>Ngày đăng ký</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IDTaiKhoan</td>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@Html.Raw(item.Address?.Length > 30 ? item.Address.Substring(0, 30) + "..." : item.Address)</td>
                    <td>
                        <span class="badge @(item.Role?.ToLower() == "admin" ? "bg-danger" : "bg-primary")">
                            @item.Role
                        </span>
                    </td>
                    <td>@item.NgayDangKi?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.IDTaiKhoan })"
                           class="btn btn-info btn-sm">Chi tiết</a>

                        @if (item.Role?.ToLower() != "admin")
                        {
                            <form asp-action="UpdateRole" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.IDTaiKhoan" />
                                <select name="role" class="form-select form-select-sm d-inline" style="width: auto;"
                                        onchange="this.form.submit()">
                                    <option value="customer" selected="@(item.Role?.ToLower() == "customer")">Customer</option>
                                    <option value="admin" selected="@(item.Role?.ToLower() == "admin")">Admin</option>

                                </select>
                            </form>

                            <form asp-action="Delete" asp-route-id="@item.IDTaiKhoan" method="get" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </form>



                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


